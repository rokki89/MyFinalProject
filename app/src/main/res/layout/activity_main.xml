<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#2196F3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:layout_margin="16dp"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose a theme" />
        <Button
            android:layout_marginTop="20dp"
            android:background="#90CAF9"
            android:id="@+id/btn_winter_fishing"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="winter catching pike" />
        <Button
            android:layout_marginTop="20dp"
            android:background="#CE93D8"
            android:id="@+id/btn_spring_fishing"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="spring catching pike" />
        <Button
            android:layout_marginTop="20dp"
            android:background="#81C784"
            android:id="@+id/btn_summer_fishing"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="summer catching pike" />
        <Button
            android:layout_marginTop="20dp"
            android:background="#FFF176"
            android:id="@+id/btn_autumn_fishing"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="autumn catching pike" />
        <Button
            android:layout_marginTop="32dp"
            android:background="#FF5722"
            android:id="@+id/btn_dishes"
            android:gravity="center"
            android:text="dishes from pike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
